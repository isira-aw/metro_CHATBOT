# Google Gemini API Configuration
GOOGLE_API_KEY=your-google-api-key-here

# Optional: Secret key for session management
SECRET_KEY=your-secret-key-change-this-in-production

# Pinecone Configuration
PINECONE_API_KEY=your-pinecone-api-key-here
PINECONE_ENV=gcp-starter
PINECONE_INDEX=metrochatbot

# Application Settings
APP_HOST=0.0.0.0
APP_PORT=8000

# PostgreSQL Database
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=ups
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-database-password-here

# Database URL (use your actual credentials)
DATABASE_URL=postgresql://postgres:your-password@localhost:5432/metro_chatbot
